<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.triage.SearchActivity" >

    <TextView
        android:id="@+id/notfoundtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:text="Patient Not Found"
        android:fontFamily="sans-serif"
        android:textColor="#2E5C73"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/newHealthCardnumInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EnterCardNumLabel"
        android:layout_alignRight="@+id/EnterCardNumLabel"
        android:layout_below="@+id/EnterCardNumLabel"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:maxLines="1"
        android:inputType="numberSigned"
        android:textColor="#238F8B"
        android:fontFamily="sans-serif-medium" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/EnterCardNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif-medium"
        android:text="Please enter a Health Card Number:"
        android:textColor="#114543"
        android:textSize="23dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_above="@+id/notfoundtextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="sans-serif"
        android:onClick="searchPatient"
        android:text="Search"
        android:textColor="#FFFFFF" />

</RelativeLayout>
